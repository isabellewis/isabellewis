{
  "roots": ["src/"],
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "./dashboard/coverage",
  "coverageReporters": ["json", "lcov", "text", "text-summary"],
  "collectCoverageFrom": [
    "src/**/**.jsx",
    "!src/styles/**",
    "!src/assets/**",
    "!src/**/*.style.**",
    "!src/**/*.stories.**",
    "!**/*.spec.**",
    "!**/__snapshots__/**",
    "!**/index.js"
  ],
  "coveragePathIgnorePatterns": ["/build/"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "setupTestFrameworkScriptFile": "<rootDir>util/setupTests.js",
  "moduleFileExtensions": ["js", "jsx"]
}